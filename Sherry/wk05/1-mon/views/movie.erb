<div class="container">
	<div class="movie_page_main">
		<div class="title"><%= @film["Title"] %>(<%= @film["Year"] %>)</div>
		<div class="poster_and_info">
			<div><img class="movie_poster" src="<%= @film["Poster"] %>"></div>
			<div class="aside">
				<ul class="movie_info">
		<li>Director: <%= @film["Director"] %></li>
		<li>Writer: <%= @film["Writer"] %></li>
		<li>Actors: <%= @film["Actors"] %></li>
		<li>Genre: <%= @film["Genre"] %></li>
		<li>Country: <%= @film["Country"] %></li>
		<li>Language: <%= @film["Language"] %></li>
		<li>Released: <%= @film["Released"] %></li>
		<li>Runtime: <%= @film["Runtime"] %></li>
		<li>Rated: <%= @film["Rated"] %></li>
		<li>Imdb Rating: <%= @film["imdbRating"] %></li> 
		<li>Production: <%= @film["Production"] %></li>
		<li>Box office: <%= @film["BoxOffice"] %></li>
		<li>Website: <%= @film["Website"] %></li>
				</ul>
				<button class="watch_list">+ Add to Watchlist</button>
			</div>
		</div>
	</div>
</div>
